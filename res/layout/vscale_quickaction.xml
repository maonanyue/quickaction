<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/quickaction_border">
    <!-- android:background="@drawable/selector2" -->
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/background">
	        
	     <FrameLayout
	  		android:layout_marginTop="10dip"
	        android:id="@+id/header2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/dump_tracks"
	        android:layout_alignRight="@+id/dump_tracks"
	        android:background="@drawable/quickaction_top_frame"
	        android:visibility="invisible"/>
	        
	  	<ImageView
	        android:id="@+id/arrow_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/quickaction_arrow_up" />
	
	        <FrameLayout
	            android:id="@+id/dump_tracks"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"	            
		        android:fadingEdgeLength="0dip"
		        android:layout_below="@id/header2"> 	                
	        </FrameLayout>            
	
	    <FrameLayout
	        android:id="@+id/footer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/dump_tracks"
	        android:layout_alignRight="@+id/dump_tracks"
	        android:layout_below="@id/dump_tracks"
	        android:background="@drawable/quickaction_bottom_frame" 
	        android:visibility="invisible"/>
	
	    <ImageView
	        android:id="@+id/arrow_down"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:layout_marginTop="-1dip"
	        android:layout_below="@id/footer"
	        android:src="@drawable/quickaction_arrow_down" />
	
	</RelativeLayout>
    <FrameLayout
        android:id="@+id/tracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="0dip">            
   </FrameLayout>  
</FrameLayout>