<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient android:angle="270" android:endColor="#667848"
                android:startColor="#527122" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#667848"
                android:startColor="#527122"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" 
                android:startColor="#00c4f8" android:endColor="#55c4f8"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- android:endColor="#99BD4C"
                android:startColor="#A5D245" -->
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#564352"
                android:startColor="#838887"  />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>